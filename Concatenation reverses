# Function to concatenate two strings
def concatenate_strings(str1, str2):
    return str1 + str2

# Function to reverse a string
def reverse_string(s):
    return s[::-1]

# Function to slice a string (sub-string from start index to end index)
def slice_string(s, start, end):
    return s[start:end]

# Function to find the length of a string
def string_length(s):
    return len(s)

# Input strings for demonstration
str1 = "Hello"
str2 = "World"

# Demonstration of string operations
concatenated = concatenate_strings(str1, str2)
reversed_str = reverse_string(str1)
sliced_str = slice_string(concatenated, 1, 8)
length_str1 = string_length(str1)
length_concatenated = string_length(concatenated)

# Output the results
print("Original strings:", str1, str2)
print("Concatenated string:", concatenated)
print("Reversed string of str1:", reversed_str)
print("Sliced string (from index 1 to 8) of concatenated string:", sliced_str)
print("Length of str1:", length_str1)
print("Length of concatenated string:", length_concatenated)
